<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_shape"
        android:orientation="horizontal"
        android:layout_margin="8dip"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        android:dividerPadding="0dp"
        >

        <ImageButton
            android:id="@+id/previous_pic"
            android:layout_width="@dimen/arrow_width"
            android:layout_height="match_parent"
            android:src="@drawable/skip_prev_white"
            android:background="@android:color/transparent"
            />

        <Button
            android:id="@+id/karma_btn"
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:text="Karma"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/release_btn"
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:text="Release"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:textSize="25dp"
            />

        <ImageButton
            android:id="@+id/next_pic"
            android:layout_width="@dimen/arrow_width"
            android:layout_height="match_parent"
            android:src="@drawable/skip_next_white"
            android:background="@android:color/transparent"
            />

    </LinearLayout>

</FrameLayout>