<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_Album"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.AlbumActivity"
    tools:showIn="@layout/activity_album">

    <Switch
        android:id="@+id/deja_album"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:gravity="start"
        android:text="@string/d_album"
        android:textColor="#EC7063"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/camera_album"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:gravity="start"
        android:text="@string/c_album"
        android:textColor="#8E44AD"
        android:textSize="20sp" />

</LinearLayout>
